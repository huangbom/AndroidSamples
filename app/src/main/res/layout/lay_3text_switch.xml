<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="leftText"
            type="String" />

        <variable
            name="rightText"
            type="String" />

        <variable
            name="rightTextSuffix"
            type="String" />

        <variable
            name="switchChecked"
            type="Boolean" />

        <variable
            name="visibility"
            type="Boolean" />

        <variable
            name="dividerVisibility"
            type="Boolean" />

    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="@{(visibility ?? true) ? View.VISIBLE : View.GONE}"
        tools:layout_height="45dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{leftText}"
                tools:text="leftText" />

            <View
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/tv_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{rightText}"
                tools:text="rightText" />

            <TextView
                android:id="@+id/tv_right_suffix"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{rightTextSuffix}"
                tools:text="rightSuffix" />

            <android.support.v7.widget.SwitchCompat
                android:id="@+id/swit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:checked="@{switchChecked ?? true}" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.75dp"
            android:layout_gravity="bottom"
            android:background="#ffeae9e8"
            android:visibility="@{(dividerVisibility ?? true) ? View.VISIBLE : View.GONE}" />
    </FrameLayout>
</layout>
