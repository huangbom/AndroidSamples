<?xml version="1.0" encoding="utf-8"?>
<layout     xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <data>
        <import type="com.example.wuxie.mycart.MyCartActivity" />
    </data>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.wuxie.MainActivity">

    <requestFocus
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onDataBindingClick"
        android:text="data binding" />

    <com.example.wuxie.widget.AddReduceEditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </com.example.wuxie.widget.AddReduceEditText>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="@{(v) -> MyCartActivity.start(v.getContext())}"
        android:text="购物车" />


</LinearLayout>
</layout>
